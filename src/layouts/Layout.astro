---
import "@fontsource/inter-tight";
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Knap Gemaakt - Premium Websites for â‚¬495"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon_final.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="bg-canvas text-ink antialiased overflow-x-hidden selection:bg-acid selection:text-black"
  >
    <slot />

    <script>
      import Lenis from "lenis";

      const lenis = new Lenis({
        lerp: 0.1, // "Viscous" feel
        smoothWheel: true,
      });

      function raf(time: number) {
        lenis.raf(time);
        requestAnimationFrame(raf);
      }

      requestAnimationFrame(raf);
    </script>
  </body>
</html>
