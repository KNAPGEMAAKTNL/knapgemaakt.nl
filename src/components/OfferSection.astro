---
import BentoGrid from "./BentoGrid.astro";
import BentoItem from "./BentoItem.astro";
import { TextReveal } from "./TextReveal";

const coreFeatures = [
    {
        title: "Bliksemsnel & Professioneel",
        points: [
            "Maximale snelheidscore voor betere vindbaarheid",
            "Perfect op telefoon, tablet én desktop",
            "Geen trage WordPress-sites die vastlopen of gehackt worden",
        ],
    },
    {
        title: "Design Dat Werkt",
        points: [
            "Wij onderzoeken de beste websites in jouw branche",
            "Strategisch design gebaseerd op wat écht werkt",
            "Jij beslist, wij regelen de rest",
        ],
    },
    {
        title: "Teksten? Geregeld",
        points: [
            "Pakkende teksten die jouw klanten overtuigen",
            "Wij leveren het concept, jij zet de puntjes op de i",
            "Start direct met een volledig gevulde website",
        ],
    },
];

const retainerFeatures = [
    {
        title: "Wijzigingen? Direct geregeld.",
        description:
            "Nieuwe prijs of foto? Stuur een berichtje en wij passen het binnen 24 uur aan.",
    },
    {
        title: "Altijd Online & Veilig",
        description:
            "Supersnelle hosting met de beste beveiliging. Je website is altijd bereikbaar.",
    },
    {
        title: "Techniek Is Onze Zorg",
        description:
            "Geen gedoe met updates of instellingen. Wij zorgen dat jouw website altijd perfect werkt.",
    },
];
---

<section class="min-h-screen bg-canvas p-4 md:p-8 pt-0">
    <BentoGrid class="h-auto">
        <!-- Header -->
        <BentoItem
            colSpan="md:col-span-8"
            rowSpan="md:row-span-2"
            className="flex items-end p-8 border-b border-ink/10 md:border-b-0"
        >
            <div class="flex flex-col">
                <TextReveal
                    client:visible
                    text="Klaar in"
                    className="text-5xl md:text-8xl font-black uppercase tracking-tighter leading-none"
                />
                <TextReveal
                    client:visible
                    text="7 Dagen."
                    delay={0.15}
                    className="text-5xl md:text-8xl font-black uppercase tracking-tighter leading-none text-electric"
                />
            </div>
        </BentoItem>

        <!-- Main Pricing -->
        <BentoItem
            colSpan="md:col-span-4"
            rowSpan="md:row-span-2"
            noHover={true}
            className="flex flex-col items-center justify-center bg-acid p-6 border-l border-ink/10 md:border-l-0"
        >
            <div
                class="text-sm md:text-lg font-mono uppercase tracking-[0.2em] mb-4 bg-ink text-canvas px-4 py-2 inline-block"
            >
                De Website
            </div>
            <div
                class="text-7xl md:text-9xl font-black tracking-tight leading-none"
            >
                €595
            </div>
            <div
                class="text-sm md:text-base font-bold uppercase tracking-widest mt-4 opacity-60"
            >
                Eenmalig
            </div>
        </BentoItem>

        <!-- Core Features -->
        <BentoItem
            colSpan="md:col-span-12"
            rowSpan="md:row-span-6"
            className="p-8 md:p-12 border-t border-ink/10 md:border-t-0 bg-canvas"
        >
            <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                {
                    coreFeatures.map((feature) => (
                        <div class="flex flex-col">
                            <h3 class="text-2xl font-black uppercase tracking-tighter mb-6 flex items-center gap-3">
                                <span class="text-electric font-mono text-xl">
                                    [+]
                                </span>
                                {feature.title}
                            </h3>
                            <ul class="space-y-4">
                                {feature.points.map((point) => (
                                    <li class="flex items-start gap-3 text-lg font-medium leading-tight text-ink/80">
                                        <span class="text-electric font-bold mt-0.5 shrink-0">
                                            +
                                        </span>
                                        {point}
                                    </li>
                                ))}
                            </ul>
                        </div>
                    ))
                }
            </div>
        </BentoItem>

        <!-- Comparison Table -->
        <BentoItem
            colSpan="md:col-span-7"
            rowSpan="md:row-span-6"
            noHover={true}
            className="p-4 md:p-12 border-t border-ink/10 bg-ink text-canvas"
        >
            <h3 class="text-2xl font-black uppercase tracking-tighter mb-8">
                Jouw Voordeel Op Een Rij
            </h3>
            <div class="w-full overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="border-b border-canvas/20">
                            <th
                                class="py-4 font-mono text-xs uppercase tracking-widest opacity-50 w-12 md:w-1/3"
                            >
                                <span class="md:hidden">#</span>
                                <span class="hidden md:inline">Kenmerk</span>
                            </th>
                            <th
                                class="py-4 font-mono text-xs uppercase tracking-widest opacity-50"
                                >Traditioneel</th
                            >
                            <th
                                class="py-4 font-mono text-xs uppercase tracking-widest text-acid"
                                >KNAP GEMAAKT</th
                            >
                        </tr>
                    </thead>
                    <tbody class="text-sm md:text-base">
                        <tr class="border-b border-canvas/10">
                            <td class="py-4 font-bold">
                                <span class="hidden md:inline">Investering</span
                                >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="square"
                                    stroke-linejoin="miter"
                                    class="md:hidden text-acid"
                                    ><line x1="12" x2="12" y1="2" y2="22"
                                    ></line><path
                                        d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"
                                    ></path></svg
                                >
                            </td>
                            <td class="py-4 opacity-60">€2.000 - €5.000</td>
                            <td class="py-4 text-acid font-bold">€595</td>
                        </tr>
                        <tr class="border-b border-canvas/10">
                            <td class="py-4 font-bold">
                                <span class="hidden md:inline">Snelheid</span>
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="square"
                                    stroke-linejoin="miter"
                                    class="md:hidden text-acid"
                                    ><polygon
                                        points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"
                                    ></polygon></svg
                                >
                            </td>
                            <td class="py-4 opacity-60">4-8 weken</td>
                            <td class="py-4 text-acid font-bold">1 Week</td>
                        </tr>
                        <tr class="border-b border-canvas/10">
                            <td class="py-4 font-bold">
                                <span class="hidden md:inline"
                                    >Transparantie</span
                                >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="square"
                                    stroke-linejoin="miter"
                                    class="md:hidden text-acid"
                                    ><circle cx="11" cy="11" r="8"
                                    ></circle><line
                                        x1="21"
                                        x2="16.65"
                                        y1="21"
                                        y2="16.65"></line></svg
                                >
                            </td>
                            <td class="py-4 opacity-60">Offerte</td>
                            <td class="py-4 text-acid font-bold">Vaste prijs</td
                            >
                        </tr>
                        <tr class="border-b border-canvas/10">
                            <td class="py-4 font-bold">
                                <span class="hidden md:inline">Onderhoud</span>
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="square"
                                    stroke-linejoin="miter"
                                    class="md:hidden text-acid"
                                    ><path
                                        d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"
                                    ></path></svg
                                >
                            </td>
                            <td class="py-4 opacity-60">Zelf updaten</td>
                            <td class="py-4 text-acid font-bold"
                                >Wij doen het</td
                            >
                        </tr>
                        <tr>
                            <td class="py-4 font-bold">
                                <span class="hidden md:inline">Service</span>
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="square"
                                    stroke-linejoin="miter"
                                    class="md:hidden text-acid"
                                    ><path
                                        d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"
                                    ></path></svg
                                >
                            </td>
                            <td class="py-4 opacity-60">Tickets</td>
                            <td class="py-4 text-acid font-bold"
                                >Direct contact</td
                            >
                        </tr>
                    </tbody>
                </table>
            </div>
        </BentoItem>

        <!-- Option B: Retainer -->
        <BentoItem
            colSpan="md:col-span-5"
            rowSpan="md:row-span-6"
            className="p-8 md:p-12 border-t border-l border-ink/10 bg-canvas"
        >
            <div>
                <div
                    class="text-sm md:text-lg font-mono uppercase tracking-[0.2em] mb-4 bg-electric text-canvas px-4 py-2 inline-block"
                >
                    Het Beheerpakket
                </div>
                <h3
                    class="text-3xl md:text-5xl font-black uppercase tracking-tighter mb-6 italic leading-[0.9]"
                >
                    Alles Van A Tot Z Geregeld.
                </h3>
                <div
                    class="font-mono text-sm text-electric uppercase tracking-widest mb-10 opacity-80"
                >
                    [ Na je éénmalige investering ]
                </div>
                <div class="space-y-8">
                    {
                        retainerFeatures.map((item) => (
                            <div>
                                <div class="font-black uppercase text-base md:text-lg tracking-tighter mb-2 flex items-center gap-2">
                                    <span class="text-electric text-sm">
                                        //
                                    </span>
                                    {item.title}
                                </div>
                                <p class="text-base text-ink/70 leading-snug">
                                    {item.description}
                                </p>
                            </div>
                        ))
                    }
                </div>
                <div
                    class="mt-8 pt-6 border-t border-ink/10 flex items-center justify-between mb-8"
                >
                    <div class="text-5xl md:text-6xl font-black tracking-tight">
                        €49<span
                            class="text-xl md:text-2xl font-normal opacity-50"
                            >/p.m.</span
                        >
                    </div>
                </div>

                <!-- Guarantee Card -->
                <div
                    class="bg-ink text-canvas p-6 md:p-8 relative overflow-hidden -mx-8 -mb-8 md:-mx-12 md:-mb-12"
                >
                    <div
                        class="relative z-10 flex flex-col items-center text-center"
                    >
                        <div
                            class="text-acid font-mono text-xs uppercase tracking-widest mb-4 whitespace-nowrap"
                        >
                            [ Geen Risico - 100% Tevreden ]
                        </div>
                        <p
                            class="text-lg md:text-xl font-medium italic leading-relaxed mb-8 opacity-90"
                        >
                            "Vind je 't niks? Je krijgt je geld terug. Geen
                            discussie, geen gedoe."
                        </p>
                        <a
                            href="/aanvragen"
                            class="w-full bg-electric text-canvas py-4 font-black uppercase tracking-tighter hover:bg-black hover:text-acid transition-all duration-300 flex items-center justify-center gap-2 group/btn"
                        >
                            <span
                                class="relative group-hover/btn:-translate-x-2 transition-transform duration-300"
                            >
                                VRAAG JE WEBSITE AAN
                                <span
                                    class="absolute -bottom-1 left-0 w-full h-0.5 bg-current scale-x-0 transition-transform duration-300 origin-left group-hover/btn:scale-x-100"
                                ></span>
                            </span>
                            <span
                                class="group-hover/btn:translate-x-1 transition-transform duration-300"
                                >&rarr;</span
                            >
                        </a>
                    </div>
                    <!-- Background Gradient -->
                    <div
                        class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(204,255,0,0.15),transparent_50%)]"
                    >
                    </div>
                </div>
            </div>
        </BentoItem>
    </BentoGrid>
</section>
