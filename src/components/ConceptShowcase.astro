---
import BentoGrid from "./BentoGrid.astro";
import BentoItem from "./BentoItem.astro";
import { cn } from "../lib/utils";

interface Props {
    city?: string;
}

const { city = "Culemborg" } = Astro.props;

interface Project {
    title: string;
    description: string;
    type: "CONCEPT" | "LIVE";
    color: string;
    colSpan: string;
    image?: string;
    url?: string;
}

const projects: Project[] = [
    {
        title: "Fitcity Culemborg",
        description: "Premium fitness club met 24/7 toegang.",
        type: "LIVE",
        color: "bg-ink",
        colSpan: "md:col-span-6",
        image: "/fitcityculemborg.png",
        url: "https://fitcityculemborg.summitlab.dev",
    },
    {
        title: "ByShakir",
        description: "High-end kapperszaak in het centrum.",
        type: "CONCEPT",
        color: "bg-ink",
        colSpan: "md:col-span-6",
        image: "/byshakir.png",
        url: "https://byshakir.summitlab.dev",
    },
];
---

<section class="bg-canvas p-4 md:p-8 pt-0">
    <div
        class="mb-8 md:mb-12 border-t border-ink/10 pt-8 flex flex-col md:flex-row justify-between items-end gap-6"
    >
        <div>
            <h2
                class="text-4xl md:text-6xl font-black uppercase tracking-tighter mb-4"
            >
                Werk in <span class="text-electric">{city}</span>
            </h2>
            <p class="text-xl text-ink/60 max-w-xl">
                Websites die niet alleen mooi zijn, maar ook werken.
            </p>
        </div>
        <div class="hidden md:block text-right">
            <span
                class="font-mono text-xs uppercase tracking-widest text-ink/40"
                >Ons Portfolio</span
            >
        </div>
    </div>

    <BentoGrid class="h-auto gap-4 md:gap-8 bg-transparent p-0">
        {
            projects.map((project, i) => (
                <BentoItem
                    colSpan={project.colSpan}
                    rowSpan="md:row-span-1"
                    className={cn(
                        "p-0 aspect-square md:aspect-video flex flex-col group relative overflow-hidden border border-ink/10",
                        project.color,
                    )}
                >
                    <a
                        href={project.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="absolute inset-0 z-30 block w-full h-full"
                    >
                        <span class="sr-only">
                            Bekijk project {project.title}
                        </span>
                    </a>

                    {/* Image Container - takes full space */}
                    <div class="absolute inset-0 bg-ink pointer-events-none">
                        {project.image && (
                            <img
                                src={project.image}
                                alt={project.title}
                                class="w-full h-full object-cover object-center md:object-top transition-transform duration-700 ease-out group-hover:scale-105"
                            />
                        )}

                        {/* Premium Gradient Overlay */}
                        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent opacity-60 group-hover:opacity-80 transition-opacity duration-500" />
                    </div>

                    {/* Content Container - Pushed to bottom */}
                    <div class="relative h-full flex flex-col justify-end p-8 md:p-12 z-20 pointer-events-none">
                        <div class="transform translate-y-4 group-hover:translate-y-0 transition-transform duration-500 ease-out">
                            <div class="flex justify-between items-end">
                                <div class="space-y-2">
                                    <span class="inline-block px-3 py-1 bg-acid/10 border border-acid/20 text-acid font-mono text-xs font-bold uppercase tracking-widest backdrop-blur-md mb-2">
                                        {project.type}
                                    </span>
                                    <h3 class="text-3xl md:text-5xl font-black uppercase tracking-tighter text-white">
                                        {project.title}
                                    </h3>
                                    {/* <p class="text-white/70 text-lg font-medium max-w-md">
                                        {project.description}
                                    </p> */}
                                </div>
                                <div class="w-12 h-12 border border-white/20 bg-white/5 backdrop-blur-sm flex items-center justify-center text-white opacity-0 translate-x-4 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-500 ease-out delay-75">
                                    <span class="transform rotate-0 group-hover:-rotate-45 transition-transform duration-500">
                                        &rarr;
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </BentoItem>
            ))
        }
    </BentoGrid>
</section>
