---
/**
 * ProcessSection - Visual timeline showing how we work
 * 5 steps from first contact to launch
 */

const steps = [
	{
		number: "01",
		title: "Gesprek",
		description: "Kort telefoongesprek om je wensen te bespreken"
	},
	{
		number: "02",
		title: "Input",
		description: "Je vult een vragenlijst in en deelt foto's & logo's"
	},
	{
		number: "03",
		title: "Bouw",
		description: "Wij gaan aan de slag, jij hoeft niks te doen"
	},
	{
		number: "04",
		title: "Feedback",
		description: "Je bekijkt het resultaat, wij verwerken je input"
	},
	{
		number: "05",
		title: "Live",
		description: "Je nieuwe website gaat online"
	}
];
---

<section class="py-16 md:py-24 px-6 md:px-12 lg:px-16 bg-canvas relative overflow-hidden">
	<div class="max-w-6xl xl:max-w-7xl mx-auto">
		<!-- Section Header -->
		<div class="text-center mb-12 md:mb-16">
			<div class="text-xs font-mono uppercase tracking-[0.2em] text-ink/60 mb-4">
				[ Ons Proces ]
			</div>
			<h2 class="text-3xl md:text-5xl font-black uppercase tracking-tighter leading-[0.9]">
				In 5 Stappen Live
			</h2>
		</div>

		<!-- Timeline -->
		<div class="relative">
			<!-- Horizontal line (desktop) -->
			<div class="hidden md:block absolute top-8 left-0 right-0 h-px bg-ink/20"></div>

			<!-- Progress line (desktop) -->
			<div class="hidden md:block absolute top-8 left-0 right-0 h-px bg-gradient-to-r from-acid via-electric to-acid opacity-50"></div>

			<!-- Vertical timeline line (mobile) -->
			<div class="md:hidden absolute left-1/2 top-0 bottom-0 w-px bg-gradient-to-b from-acid via-electric to-acid opacity-30 -translate-x-1/2"></div>

			<!-- Steps - Desktop: horizontal, Mobile: zigzag -->
			<div class="hidden md:grid md:grid-cols-5 gap-4">
				{steps.map((step) => (
					<div class="relative flex flex-col items-center text-center">
						<!-- Node -->
						<div class="relative z-10 w-16 h-16 bg-ink text-canvas flex items-center justify-center font-mono text-sm font-bold mb-4">
							{step.number}
						</div>
						<!-- Content -->
						<h3 class="text-lg font-black uppercase tracking-tight mb-2">
							{step.title}
						</h3>
						<p class="text-sm text-ink/60 leading-relaxed max-w-[180px]">
							{step.description}
						</p>
					</div>
				))}
			</div>

			<!-- Mobile zigzag layout -->
			<div class="md:hidden space-y-8">
				{steps.map((step, index) => {
					const isEven = index % 2 === 1;
					return (
						<div class={`relative flex items-center gap-4 ${isEven ? 'flex-row-reverse' : ''}`}>
							<!-- Content side -->
							<div class={`flex-1 ${isEven ? 'text-left' : 'text-right'}`}>
								<h3 class="text-lg font-black uppercase tracking-tight mb-1">
									{step.title}
								</h3>
								<p class="text-sm text-ink/60 leading-relaxed">
									{step.description}
								</p>
							</div>

							<!-- Node (center) -->
							<div class="relative z-10 w-12 h-12 bg-ink text-canvas flex items-center justify-center font-mono text-xs font-bold shrink-0">
								{step.number}
							</div>

							<!-- Empty space for other side -->
							<div class="flex-1"></div>
						</div>
					);
				})}
			</div>
		</div>

	</div>
</section>
