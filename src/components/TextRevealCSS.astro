---
/**
 * TextRevealCSS - Simple text wrapper component
 * Previously animated text reveal, now renders instantly for better LCP scores.
 * Kept as component to avoid breaking changes across the codebase.
 */
interface Props {
  text: string;
  class?: string;
  delay?: number; // Kept for API compatibility, no longer used
  as?: 'h1' | 'h2' | 'h3' | 'div' | 'span';
}

const { text, class: className = '', as: Tag = 'div' } = Astro.props;
---

<Tag class:list={[className]}>{text}</Tag>
