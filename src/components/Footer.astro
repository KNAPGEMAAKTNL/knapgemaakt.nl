---
import { TextReveal } from "./TextReveal";
---

<footer class="bg-ink text-canvas py-12 md:py-16 px-6 md:px-12 lg:px-16 bg-grid-dark relative overflow-hidden">
	<div class="max-w-6xl xl:max-w-7xl mx-auto relative z-10">
		<!-- Top row: Legal links + Copyright (desktop only) -->
		<div class="flex flex-col md:flex-row justify-between items-center gap-6 mb-12 md:mb-16">
			<!-- Legal Links -->
			<div class="flex flex-wrap justify-center md:justify-start gap-x-6 gap-y-2 font-mono text-xs md:text-sm text-canvas/60 uppercase tracking-widest">
				<a href="/algemene-voorwaarden" class="hover:text-acid transition-colors">Algemene Voorwaarden</a>
				<a href="/privacy" class="hover:text-acid transition-colors">Privacy</a>
				<a href="/sitemap" class="hover:text-acid transition-colors">Sitemap</a>
			</div>

			<!-- Copyright (desktop only) -->
			<div class="hidden md:block font-mono text-xs md:text-sm text-canvas/60">
				© 2026 KNAP GEMAAKT.
			</div>
		</div>

		<!-- Business Info row -->
		<div class="flex flex-wrap justify-center md:justify-start gap-x-6 gap-y-2 mb-8 font-mono text-xs text-canvas/40">
			<span>KvK: 73652377</span>
			<span>BTW: NL002383577B12</span>
			<span>Buren, Nederland</span>
			<a href="mailto:info@knapgemaakt.nl" class="hover:text-acid transition-colors">info@knapgemaakt.nl</a>
		</div>

		<!-- Big Logo -->
		<div class="pointer-events-none">
			<TextReveal
				client:visible
				text="KNAP GEMAAKT."
				className="text-[12vw] md:text-[10vw] font-black leading-[0.8] tracking-tighter select-none block"
			/>
		</div>

		<!-- Copyright (mobile only - at bottom) -->
		<div class="md:hidden text-center mt-8 font-mono text-xs text-canvas/60">
			© 2026 KNAP GEMAAKT.
		</div>
	</div>
</footer>
