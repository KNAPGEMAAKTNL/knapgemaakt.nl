---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import { getAllProjects } from "../data/projects";
import { getAllCities } from "../data/cities";
import { getAllBlogPosts } from "../data/blog";

const projects = getAllProjects();
const cities = getAllCities();
const blogPosts = getAllBlogPosts();
---

<Layout title="Sitemap | KNAP GEMAAKT.">
    <main class="min-h-screen bg-canvas pt-32 pb-24 px-6 md:px-12 lg:px-16 bg-grid-light relative overflow-hidden">
        <div class="max-w-6xl xl:max-w-7xl mx-auto relative z-10">
            <!-- Header -->
            <div class="mb-16">
                <div class="text-xs font-mono uppercase tracking-[0.2em] text-ink/40 mb-4">
                    [ Navigatie ]
                </div>
                <h1 class="text-5xl md:text-7xl lg:text-8xl font-black uppercase tracking-tight leading-[0.9] mb-6">
                    Sitemap
                </h1>
                <p class="text-xl md:text-2xl text-ink/60 max-w-2xl">
                    Alle pagina's van KNAP GEMAAKT. op een rij.
                </p>
            </div>

            <!-- Links Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-12 lg:gap-8">
                <!-- Main Pages -->
                <section class="space-y-6">
                    <h2 class="text-lg font-bold uppercase tracking-tight flex items-center gap-3">
                        <span class="text-electric font-mono text-sm">[01]</span>
                        Hoofdpagina's
                    </h2>
                    <ul class="space-y-3">
                        <li>
                            <a href="/" class="text-ink/70 hover:text-electric transition-colors font-medium">
                                Home
                            </a>
                        </li>
                        <li>
                            <a href="/portfolio" class="text-ink/70 hover:text-electric transition-colors font-medium">
                                Portfolio
                            </a>
                        </li>
                        <li>
                            <a href="/blog" class="text-ink/70 hover:text-electric transition-colors font-medium">
                                Blog
                            </a>
                        </li>
                        <li>
                            <a href="/#prijzen" class="text-ink/70 hover:text-electric transition-colors font-medium">
                                Prijzen
                            </a>
                        </li>
                        <li>
                            <a href="/#faq" class="text-ink/70 hover:text-electric transition-colors font-medium">
                                FAQ
                            </a>
                        </li>
                        <li>
                            <a href="/aanvragen" class="text-ink/70 hover:text-electric transition-colors font-medium">
                                Aanvragen
                            </a>
                        </li>
                    </ul>
                </section>

                <!-- Projects -->
                <section class="space-y-6">
                    <h2 class="text-lg font-bold uppercase tracking-tight flex items-center gap-3">
                        <span class="text-electric font-mono text-sm">[02]</span>
                        Projecten
                    </h2>
                    <ul class="space-y-3">
                        {projects.map((project) => (
                            <li>
                                <a href={`/project/${project.slug}`} class="text-ink/70 hover:text-electric transition-colors font-medium">
                                    {project.title}
                                </a>
                            </li>
                        ))}
                    </ul>
                </section>

                <!-- Blog Posts -->
                <section class="space-y-6">
                    <h2 class="text-lg font-bold uppercase tracking-tight flex items-center gap-3">
                        <span class="text-electric font-mono text-sm">[03]</span>
                        Artikelen
                    </h2>
                    <ul class="space-y-3">
                        {blogPosts.map((post) => (
                            <li>
                                <a href={`/blog/${post.slug}`} class="text-ink/70 hover:text-electric transition-colors font-medium">
                                    {post.title}
                                </a>
                            </li>
                        ))}
                    </ul>
                </section>

                <!-- City Pages -->
                <section class="space-y-6">
                    <h2 class="text-lg font-bold uppercase tracking-tight flex items-center gap-3">
                        <span class="text-electric font-mono text-sm">[04]</span>
                        Regio's
                    </h2>
                    <ul class="space-y-3">
                        {cities.map((city) => (
                            <li>
                                <a href={`/webdesign-${city.slug}`} class="text-ink/70 hover:text-electric transition-colors font-medium">
                                    Webdesign {city.name}
                                </a>
                            </li>
                        ))}
                    </ul>
                </section>

                <!-- Legal -->
                <section class="space-y-6">
                    <h2 class="text-lg font-bold uppercase tracking-tight flex items-center gap-3">
                        <span class="text-electric font-mono text-sm">[05]</span>
                        Juridisch
                    </h2>
                    <ul class="space-y-3">
                        <li>
                            <a href="/algemene-voorwaarden" class="text-ink/70 hover:text-electric transition-colors font-medium">
                                Algemene Voorwaarden
                            </a>
                        </li>
                        <li>
                            <a href="/privacy" class="text-ink/70 hover:text-electric transition-colors font-medium">
                                Privacyverklaring
                            </a>
                        </li>
                        <li>
                            <a href="/sitemap" class="text-ink/70 hover:text-electric transition-colors font-medium">
                                Sitemap
                            </a>
                        </li>
                    </ul>
                </section>
            </div>
        </div>
    </main>
    <Footer />
</Layout>
