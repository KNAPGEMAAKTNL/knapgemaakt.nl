---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Aanvraag Ontvangen | KNAP GEMAAKT.">
    <main class="min-h-screen bg-canvas pt-32 pb-24 px-4 md:px-8 bg-grid-light relative overflow-hidden">
        <div class="max-w-4xl mx-auto">
            <div class="text-center py-16 space-y-6">
                <div
                    class="w-20 h-20 mx-auto bg-acid flex items-center justify-center"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-10 w-10 text-black"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        stroke-width="3"
                    >
                        <path
                            stroke-linecap="square"
                            stroke-linejoin="miter"
                            d="M5 13l4 4L19 7"></path>
                    </svg>
                </div>
                <h1
                    class="text-4xl md:text-6xl font-black uppercase tracking-tighter"
                >
                    Aanvraag Ontvangen
                </h1>
                <p class="text-xl text-ink/60 max-w-lg mx-auto">
                    Bedankt voor je aanvraag! Je gesprek is ingepland.
                    Check je inbox voor de bevestiging.
                </p>
                <a
                    href="/"
                    class="inline-flex items-center justify-center mt-8 px-8 py-[18px] border-2 border-ink text-ink hover:bg-ink hover:text-canvas transition-colors duration-300 font-bold uppercase tracking-tight"
                >
                    Terug naar home
                </a>
            </div>
        </div>
    </main>
</Layout>
